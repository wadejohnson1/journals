<resources>

    <!--
         Base application theme, dependent on API level. This theme is replaced by
         "Base.Theme.Journals" from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="Base.Theme.Journals" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customizations related to backward-compatibility. -->
    </style>

    <!-- Application theme. -->
    <style
        name="Theme.Journals" parent="Base.Theme.Journals">
        <!-- Customizations that are NOT specific to a particular API-level. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!--
         Theme for activities containing a DrawerLayout, dependent on API level. This theme is
         replaced by "Base.Theme.Journals.DrawerLayout" from res/values-vXX/styles.xml on newer
         devices.
    -->
    <style
        name="Base.Theme.Journals.DrawerLayout" parent="Theme.Journals">
        <!-- Customizations related to backward-compatibility. -->
    </style>

    <!-- Theme for activities containing a DrawerLayout. -->
    <style
        name="Theme.Journals.DrawerLayout"
        parent="Base.Theme.Journals.DrawerLayout">
        <!-- Customizations that are NOT specific to a particular API-level. -->
    </style>

    <!-- Theme for media player activities. -->
    <style name="Theme.Journals.Media" parent="Theme.Journals">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

</resources>